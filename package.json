{
  "name": "homebridge-huejay",
  "version": "1.2.0",
  "description": "Homebridge Plugin for Philips Hue accessories based on Huejay",
  "keywords": [
    "philips",
    "hue",
    "huejay",
    "homebridge",
    "homebridge-plugin"
  ],
  "license": "GPL-3.0",
  "bugs": "https://github.com/raymondelooff/homebridge-huejay/issues",
  "repository": {
    "type": "git",
    "url": "git://github.com/raymondelooff/homebridge-huejay.git"
  },
  "author": "Raymon de Looff <raydelooff@gmail.com>",
  "dependencies": {
    "@raymondelooff/huejay": "^1.6.0"
  },
  "devDependencies": {
    "xo": "^0.19.0"
  },
  "engines": {
    "node": ">=6.0.0",
    "homebridge": ">=0.4.22"
  },
  "preferGlobal": true,
  "scripts": {
    "test": "xo"
  },
  "xo": {
    "esnext": true,
    "rules": {
      "unicorn/filename-case": [
        "off"
      ],
      "import/no-dynamic-require": [
        "off"
      ],
      "max-params": [
        "warn",
        8
      ]
    },
    "space": true
  }
}
